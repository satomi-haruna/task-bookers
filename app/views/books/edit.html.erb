<h2>Bookモデルの編集画面</h2>

<!--投稿した内容を代入した状態で開始-->
<h1>Editing Book</h1>

<!--<form_with model:@book do |f|>　5章の段階-->
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>

  <h4>Body</h4>
  <%= f.text_area:body %>

  <%= f.submit 'Update Book' %>

<% end %>

<p><%= link_to 'Show',book_path(@book.id)%></p>
<p>|</p>
<p><%= link_to "Back", books_path %></p>