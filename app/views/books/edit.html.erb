<!--投稿した内容を代入した状態で開始-->
<body>
  <h1>Editing Book</h1>

  <div class="edit-form">
    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <div class="form-title">
        <p>Title</p>
        <%= f.text_field:title %>
      </div>

      <div class="form-body">
        <p>Body</p>
        <%= f.text_area:body %>
      </div>

      <div class="form-button">
        <%= f.submit 'Update Book' %>
      </div>
    <% end %>

    <div class="link">
      <p><%= link_to 'Show',book_path(@book.id)%></p>
      <p>|</p>
      <p><%= link_to "Back", books_path %></p>
    </div>
  </div>
</body>