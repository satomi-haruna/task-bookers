<h1>Books</h1>

<h3>Title</h3>
<h3>Body</h3>

<% @books.each do |book| %>
  <p><%= book.title %></p>
  <p><%= book.body %></p>

  <p><%= link_to 'Show', book_path(book.id) %></p>
  <p><%= link_to "Edit", edit_book_path(book.id) %></p>
  <p><%= link_to 'Destroy',book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></p>
<% end %>


<!--新規投稿-->
<h1>New book</h1>
<!--エラーの際メッセージを表示させて投稿画面に戻る-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!-- form_with部分 -->
<%= form_with model: @book,url: books_path ,method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>

  <h4>Body</h4>
  <%= f.text_area:body %>

  <%= f.submit 'Create BooK' %>

<% end %>